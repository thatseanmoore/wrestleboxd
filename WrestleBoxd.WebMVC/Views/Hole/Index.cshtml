@model IEnumerable<GolfTrack.Models.HoleListItem>

@{
    ViewBag.Title = "Index";
}

    <h2>Golf Holes</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table" style="background-color: white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HoleId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoleNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Par)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HoleId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoleNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Par)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.HoleId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.HoleId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.HoleId })
                </td>
            </tr>
        }

    </table>